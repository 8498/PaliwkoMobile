<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/dashboardWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="Witaj"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/buttonShowMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dashboardWelcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="136dp"
        android:text="@string/Mapa"
        android:onClick="showMap" />

    <Button
        android:id="@+id/buttonShowStations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonShowMap"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="@string/Stacje" 
        android:onClick="showStations"/>

</RelativeLayout>
